{
  "name": "cds-ts-samples-correct-version",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.11.1",
    "@cap-js/sqlite": "^1.3.1",
    "@dxfrontier/cds-ts-dispatcher": "^0.1.12",
    "@dxfrontier/cds-ts-repository": "^0.1.6",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "eslint": "npx eslint .",
    "eslint:fix": "npx eslint . --fix",

    "prettier": "npx prettier . --check",
    "prettier:fix": "npx prettier . --write",
    
    "check": "npm run eslint && npm run prettier",
    
    "fix": "npm run eslint:fix && npm run prettier:fix",
    
    "build:entities": "cds-typer '*' --outputDirectory ./srv/util/types/entities",
    
    "prepare": "husky install",
    
    "start": "npm run build:entities && cds-ts watch"
  },
  "lint-staged": {
    "**/*.{ts, tsx}": [
      "npm run eslint:fix",
      "npm run prettier:fix"
    ]
  }
}
