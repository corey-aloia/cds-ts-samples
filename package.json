{
  "name": "cds-ts-samples-correct-version",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "7.4.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@cap-js/cds-typer": "^0.12.0",
    "@cap-js/sqlite": "^1.4.0",
    "@dxfrontier/cds-ts-dispatcher": "^0.1.14",
    "@dxfrontier/cds-ts-repository": "^0.2.1",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "3.1.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "eslint": "npx eslint .",
    "eslint:fix": "npx eslint . --fix",

    "prettier": "npx prettier . --check",
    "prettier:fix": "npx prettier . --write",
    
    "check": "npm run eslint && npm run prettier",
    
    "fix": "npm run eslint:fix && npm run prettier:fix",
    
    "build:entities": "cds-typer '*' --outputDirectory ./srv/util/types/entities",
    
    "prepare": "husky install",
    
    "start": "npm run build:entities && cds-ts watch"
  },
  "lint-staged": {
    "**/*.{ts, tsx}": [
      "npm run eslint:fix",
      "npm run prettier:fix"
    ]
  }
}
